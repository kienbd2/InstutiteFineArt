        <div class="row">
            <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
                <div class="row news-details-page-inner">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="news-img-holder">
                            <img src="@Model.Images.Split(';')[0]" class="img-responsive" alt="research">
                            <ul class="news-date1">
                                <li>@Model.UpdatedTime.Day - @Model.UpdatedTime.Month</li>
                                <li>@Model.UpdatedTime.Year</li>
                            </ul>
                        </div>
                        <h2 class="title-default-left-bold-lowhight"><a href="#">@Model.Title</a></h2>
                        <ul class="title-bar-high news-comments">
                            <li><a href="#"><i class="fa fa-user" aria-hidden="true"></i><span>By</span> @Model.User.UserName</a></li>
                            <li><a href="#"><i class="fa fa-tags" aria-hidden="true"></i>Price: @Model.Price</a></li>
                            <li><a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i><span>(@Model.Comments.Count())</span> Comments</a></li>
                        </ul>
                        <p>@Html.Raw(Model.PostContent)</p>

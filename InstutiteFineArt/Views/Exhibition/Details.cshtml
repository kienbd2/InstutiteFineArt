@model InstutiteOfFineArt.Core.Model.Post
@{
    ViewBag.Title = "Details";
}

<div class="inner-page-banner-area" style="background-image: url('/App_Themes/Home/Images/banner/5.jpg');">
    <div class="container">
        <div class="pagination-area">
            <h1>News Details</h1>
            <ul>
                <li><a href="/">Home</a> -</li>
                <li>Details - @Model.Title</li>
            </ul>
        </div>
    </div>
</div>

                        @foreach (var item in Model.Images.Split(';'))
                        {
                            if (!item.IsEmpty())
                            {
                                <img src="@item" class="img-responsive" alt="research">
                                <br />
                            }
                        }

                        <ul class="news-social">
                            <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                            <li><a href="#"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                            <li><a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                            <li><a href="#"><i class="fa fa-rss" aria-hidden="true"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
                        </ul>
                        <div class="course-details-comments" >
                            <input type="hidden" name="name" id="PostId" value="@Model.PostId" />
                            <h3 class="sidebar-title">(@Model.Comments.Count()) Comments</h3>
                            <div id="list"></div>

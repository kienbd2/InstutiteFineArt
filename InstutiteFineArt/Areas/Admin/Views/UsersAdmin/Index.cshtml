@model IEnumerable<InstutiteOfFineArt.Core.Model.User>

@{
    ViewBag.Title = "Index";
}
<link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="row">

    <div class="col-sm-12">

        @Html.ActionLink("Create User", "Create", null, new { @class = "btn btn-primary" })

        <table class="table table-borderer display" id="example">

            <thead>
                <tr>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>Date of birth</th>
                    <th>Avatar</th>
                    <th></th>

                </tr>

            </thead>

            <tbody>

                @foreach (var item in Model)

                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.DateOfBirth.ToString("dd/MM/yyyy")</td>
                        @if (item.Avartar.IsEmpty())
                        {
                            <td><a><img width="200" height="150" src="/Images/default-avatar-male.png" /></a></td>
                        }
                        else
                        {
                            <td><img width="200" height="150" src="@item.Avartar" /></td>
                        }

                        <td>

                            @Html.ActionLink("Sửa thông tin", "Edit", new { Id = item.Id }, null) |

                            @Html.ActionLink("Xóa", "Delete", new { Id = item.Id }, null)

                        </td>

                    </tr>

                }

            </tbody>

        </table>

    </div>

</div>
<script src="https://code.jquery.com/jquery-3.5.1.js" type="text/javascript"></script>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable();

            $('#example tbody').on('click', 'tr', function () {
                var data = table.row(this).data();
                alert('You clicked on ' + data[0] + '\'s row');
            });
        });
    </script>
}

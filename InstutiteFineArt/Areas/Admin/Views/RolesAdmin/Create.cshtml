@model IdentitySample.Models.RoleViewModel

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-error" })


    <div class="">
        <h3 style="text-align: center;">Create a new account.</h3>

        <div class="row">
            <!-- form input mask -->
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <form class="" action="" id="data" method="post" enctype="multipart/form-data">
                            <fieldset>
                                <div class="field item form-group">
                                    @Html.LabelFor(m => m.Name, new { @class = "col-form-label col-md-2 col-sm-2" })
                                    <div class="col-md-9 col-sm-9">
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="ln_solid">
                                    <div class="form-group">
                                        <div class="col-md-6 offset-md-3">
                                            <input type='submit' class="btn btn-primary" id="btnSave" value="Submit" />
                                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-success" })

                                        </div>
                                    </div>
                                </div>

                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <!-- /form input mask -->

        </div>
    </div><!-- /.docs-toggles -->

}





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
